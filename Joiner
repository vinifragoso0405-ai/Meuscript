-- [[ KALIUX JOINER - BYPASS EDITION ]] --
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")

-- CONFIGURAÇÃO VISUAL
local UI_NAME = "KALIUX JOINER"
local ACCENT = Color3.fromRGB(255, 0, 0)
local BG = Color3.fromRGB(15, 15, 15)

-- URL DO SEU FIREBASE (COM .json)
local URL = "https://meu-joiner-default-rtdb.firebaseio.com/.json"
local currentJob = ""

-- INTERFACE
local sg = Instance.new("ScreenGui", game.CoreGui)
local main = Instance.new("Frame", sg)
main.Size = UDim2.new(0, 260, 0, 110)
main.Position = UDim2.new(0.5, -130, 0.1, 0)
main.BackgroundColor3 = BG
Instance.new("UIStroke", main).Color = ACCENT
Instance.new("UICorner", main)

local label = Instance.new("TextLabel", main)
label.Size = UDim2.new(1, 0, 0, 40)
label.Position = UDim2.new(0, 0, 0.2, 0)
label.Text = "AGUARDANDO..."
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.BackgroundTransparency = 1
label.Font = Enum.Font.GothamMedium

local btn = Instance.new("TextButton", main)
btn.Size = UDim2.new(0, 200, 0, 35)
btn.Position = UDim2.new(0.5, -100, 0.6, 0)
btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
btn.Text = "JOINER (OFF)"
btn.TextColor3 = Color3.fromRGB(150, 150, 150)
Instance.new("UICorner", btn)

-- FUNÇÃO DE TELEPORTE
btn.MouseButton1Click:Connect(function()
    if currentJob ~= "" then
        TeleportService:TeleportToPlaceInstance(15561560400, currentJob, game.Players.LocalPlayer)
    end
end)

-- LOOP DE BUSCA (MODO BYPASS)
task.spawn(function()
    while task.wait(3) do -- Aumentado o tempo para evitar o bloqueio do executor
        local success, response = pcall(function()
            -- Request simples para não disparar o erro de "vulnerable function"
            return game:HttpGet(URL) 
        end)
        
        if success and response then
            local data = HttpService:JSONDecode(response)
            if data and data.jobId and data.jobId ~= currentJob then
                currentJob = data.jobId
                label.Text = "VALOR: " .. (tostring(data.serverName) or "---")
                btn.Text = "ENTRAR AGORA"
                btn.BackgroundColor3 = ACCENT
                btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            end
        else
            label.Text = "ERRO DE SEGURANÇA"
            warn("Bypass falhou ou URL errada.")
        end
    end
end)

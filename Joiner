local HttpService = game:GetService("HttpService")
local url = "https://meu-joiner-default-rtdb.firebaseio.com/.json" -- COLOQUE SUA URL AQUI

print("üîé KALIUX DEBUG: Iniciando...")

task.spawn(function()
    while task.wait(2) do
        local success, response = pcall(function()
            return HttpService:GetAsync(url)
        end)

        if success then
            local data = HttpService:JSONDecode(response)
            if data and data.jobId then
                print("üî• ID ENCONTRADO NO FIREBASE: " .. data.jobId)
                -- Se chegar aqui, o problema era o nome da vari√°vel!
            else
                print("‚ö†Ô∏è Conectado ao Firebase, mas n√£o encontrei nenhum 'jobId' l√° dentro.")
            end
        else
            warn("‚ùå ERRO DE CONEX√ÉO: Verifique se o link est√° certo e as regras em 'true'.")
        end
    end
end)

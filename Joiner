-- [[ KALIUX HUB - AUTO JOINER JOB-ID ]] --
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Configura√ß√µes de Conex√£o
local FIREBASE_URL = "https://meu-joiner-default-rtdb.firebaseio.com/.json"
local currentJobId = ""
local currentPlaceId = 18260270114 -- ID do Jogo (Ex: Roube um Brainrot)

-- Interface Visual
local sg = Instance.new("ScreenGui", game.CoreGui)
sg.Name = "KALIUX_JOINER"

local Main = Instance.new("Frame", sg)
Main.Size = UDim2.new(0, 280, 0, 160)
Main.Position = UDim2.new(0.5, -140, 0.3, 0)
Main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 10)

local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "KALIUX HUB"
Title.TextColor3 = Color3.fromRGB(255, 0, 0)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18
Title.BackgroundTransparency = 1

local InfoLabel = Instance.new("TextLabel", Main)
InfoLabel.Size = UDim2.new(1, -20, 0, 40)
InfoLabel.Position = UDim2.new(0, 10, 0, 30)
InfoLabel.Text = "Buscando Job-ID..."
InfoLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
InfoLabel.Font = Enum.Font.Gotham
InfoLabel.TextSize = 14
InfoLabel.BackgroundTransparency = 1

local JoinBtn = Instance.new("TextButton", Main)
JoinBtn.Size = UDim2.new(0, 240, 0, 40)
JoinBtn.Position = UDim2.new(0.5, -120, 0, 75)
JoinBtn.Text = "AGUARDANDO..."
JoinBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
JoinBtn.TextColor3 = Color3.fromRGB(150, 150, 150)
JoinBtn.Font = Enum.Font.GothamBold
JoinBtn.TextSize = 16
Instance.new("UICorner", JoinBtn).CornerRadius = UDim.new(0, 6)

local Discord = Instance.new("TextLabel", Main)
Discord.Size = UDim2.new(1, 0, 0, 20)
Discord.Position = UDim2.new(0, 0, 0, 130)
Discord.Text = "discord.gg/yDAcTrPvTD"
Discord.TextColor3 = Color3.fromRGB(114, 137, 218)
Discord.BackgroundTransparency = 1

-- L√≥gica de Teleporte (Fun√ß√£o Principal)
JoinBtn.MouseButton1Click:Connect(function()
    if currentJobId ~= "" then
        JoinBtn.Text = "TELEPORTANDO..."
        JoinBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 0)
        
        -- Limpeza de caracteres que quebram o teleporte (Asas, Espa√ßos)
        local cleanID = tostring(currentJobId):gsub("%s+", ""):gsub("\"", ""):gsub("'", "")
        
        local success, err = pcall(function()
            -- Realiza o teleporte para a inst√¢ncia espec√≠fica
            TeleportService:TeleportToPlaceInstance(tonumber(currentPlaceId), cleanID, LocalPlayer)
        end)
        
        if not success then
            warn("Erro no teleporte: " .. tostring(err))
            JoinBtn.Text = "ERRO (VERIFY?)"
            task.wait(2)
            JoinBtn.Text = "JOIN"
            JoinBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
        end
    end
end)

-- Monitoramento do Firebase
task.spawn(function()
    while task.wait(1.5) do
        local s, r = pcall(function() return game:HttpGet(FIREBASE_URL) end)
        if s and r then
            local data = HttpService:JSONDecode(r)
            if data and data.jobId and data.jobId ~= currentJobId then
                currentJobId = data.jobId
                InfoLabel.Text = "üìç Servidor: " .. (data.serverName or "Encontrado!") --
                JoinBtn.Text = "JOIN"
                JoinBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
                JoinBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
            end
        end
    end
end)

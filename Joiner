-- [[ KALIUX JOINER - PREMIUM SOURCE ]] --
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")

-- CONFIGURAÃ‡ÃƒO VISUAL
local UI_NAME = "KALIUX JOINER"
local ACCENT_COLOR = Color3.fromRGB(255, 0, 0) -- Vermelho
local BG_COLOR = Color3.fromRGB(15, 15, 15)    -- Preto

-- URL DO SEU FIREBASE (Certifique-se de manter o /.json no final)
local FIREBASE_URL = "https://meu-joiner-default-rtdb.firebaseio.com/.json"

-- CRIANDO A INTERFACE
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 260, 0, 90)
MainFrame.Position = UDim2.new(0.5, -130, 0.05, 0)
MainFrame.BackgroundColor3 = BG_COLOR
MainFrame.BorderSizePixel = 2
MainFrame.BorderColor3 = ACCENT_COLOR
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = UI_NAME
Title.TextColor3 = ACCENT_COLOR
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16
Title.BackgroundTransparency = 1

local StatusLabel = Instance.new("TextLabel", MainFrame)
StatusLabel.Size = UDim2.new(1, 0, 0, 30)
StatusLabel.Position = UDim2.new(0, 0, 0.4, 0)
StatusLabel.Text = "ðŸ“¡ AGUARDANDO FIREBASE..."
StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
StatusLabel.Font = Enum.Font.Gotham
StatusLabel.TextSize = 13
StatusLabel.BackgroundTransparency = 1

local ServerInfo = Instance.new("TextLabel", MainFrame)
ServerInfo.Size = UDim2.new(1, 0, 0, 20)
ServerInfo.Position = UDim2.new(0, 0, 0.7, 0)
ServerInfo.Text = "Nenhum dado capturado"
ServerInfo.TextColor3 = Color3.fromRGB(150, 150, 150)
ServerInfo.Font = Enum.Font.Gotham
ServerInfo.TextSize = 11
ServerInfo.BackgroundTransparency = 1

-- LOOP DE MONITORAMENTO
task.spawn(function()
    while task.wait(1) do
        pcall(function()
            local response = HttpService:GetAsync(FIREBASE_URL)
            local data = HttpService:JSONDecode(response)
            
            if data and data.jobId and data.jobId ~= "" then
                StatusLabel.Text = "ðŸš€ SERVIDOR DETECTADO!"
                ServerInfo.Text = "Valor: " .. (data.serverName or "---")
                
                task.wait(0.3)
                TeleportService:TeleportToPlaceInstance(tonumber(data.placeId), data.jobId, game.Players.LocalPlayer)
                
                -- Limpa o Firebase apÃ³s o teleporte
                HttpService:PostAsync(FIREBASE_URL, HttpService:JSONEncode({jobId = ""}))
            end
        end)
    end
end)
